<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000fff"
        android:id="@+id/textnorek"
        android:textStyle="bold"/>

        <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/textukuran"
            android:textColor="#005f5f"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>
    </RelativeLayout>
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/textnamabarang" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/textcustomer" />

</LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Tanggal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/awal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Stock Awal"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/tanggal"
            android:layout_alignBottom="@+id/tanggal"
            android:layout_toRightOf="@+id/tanggal"
            android:layout_toEndOf="@+id/tanggal" />

        <TextView
            android:id="@+id/in"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:text="In"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/awal"
            android:layout_alignBottom="@+id/awal"
            android:layout_toRightOf="@+id/awal"
            android:layout_toEndOf="@+id/awal"
            />

        <TextView
            android:id="@+id/out"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Out"
            android:layout_alignBottom="@+id/in"
            android:layout_toRightOf="@+id/in"
            android:layout_toEndOf="@+id/in" />

        <TextView
            android:id="@+id/akhir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Stock Akhir"
            android:layout_alignBaseline="@+id/out"
            android:layout_alignBottom="@+id/out"
            android:layout_toRightOf="@+id/out"
            android:layout_toEndOf="@+id/out" />

        <TextView
            android:id="@+id/uom"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="UOM"
            android:layout_alignBaseline="@+id/akhir"
            android:layout_alignBottom="@+id/akhir"
            android:layout_toRightOf="@+id/akhir"
            android:layout_toEndOf="@+id/akhir" />

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:orientation="vertical"
        android:scrollbars="vertical">


    </ListView>

</LinearLayout></HorizontalScrollView>



</LinearLayout>